<body>
    <header class="header">

        <div class="header-1">

            <a href="/" class="logo"> <i class="fas fa-book"></i> Wise one</a>

            <form action="" class="search-form">
                <input type="search" name="" placeholder="search here..." id="search-box">
                <label for="search-box" class="fas fa-search"></label>
            </form>

            <div class="icons">
                <div id="search-btn" class="fas fa-search"></div>
                <a href="/shopping-cart" class="icon-button fas fa-shopping-cart"><span class="cart-no icon-button__badge">
                        0
                    </span></a>
                <div id="login-btn" class="fas fa-user"></div>
                <a href="/logout" class="fas fa-sign-out-alt"></a>
            </div>

        </div>

    </header>
    <div class="error-message" style="color: red;"></div>
    <div class="products-container">
        <div class="product-header">
            <h5 class="product-title">Product</h5>
            <h5 class="product-price">Price</h5>
            <h5 class="product-quantity">Quantity</h5>
            <h5 class="product-total">Total</h5>
        </div>
        <div class="products">

        </div>
        <br>
        <form action="/payment" method="POST">
            <script src="//checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key="<%= key %>" data-amount="700"
                data-currency="inr" data-name="Order Books" data-description="Book Name: The Crimson Rose"
                data-locale="auto">
            </script>
            <!-- <button type="submit" id="checkout" class="btn btn-secondary btn-md btn">Continue to checkout</button> -->
        </form>
    </div>
    <script src="/js/product.js" type="text/javascript"></script>
